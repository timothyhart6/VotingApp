@model CivicsApp.Models.Representatives.CompleteListOfReps.Representative

@{
    var firstName = @Html.DisplayFor(Model => Model.FirstName);
    var lastName = @Html.DisplayFor(ModelItem => Model.LastName);
    var state = @Html.DisplayFor(modelItem => Model.State);
    var district = @Html.DisplayFor(ModelItem => Model.District);
}

<h2>Representative @firstName @lastName</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                State
            </th>
            <th>
                District
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @firstName
            </td>
            <td>
                @lastName
            </td>
            <td>
                @state
            </td>
            <td>
                @district
            </td>
        </tr>

    </tbody>
    Social Media:
    <tbody>
        <b>Twitter:</b> @Html.DisplayFor(ModelItem => Model.TwitterAccount)
    </tbody>
</table>